server {
	server_name test.com test.fr;
	listen localhost:8080;

	allow_methods GET, POST, DELETE;
	autoindex on;

	location / {
		root /www ;
		rewrite /blabla exemple.txt rewrite;
		rewrite /blibli exemple.txt permanent;
		autoindex on;
		allow_methods GET, POST, DELETE;
	}

	location /favicon. {
		root www/testhtml/favicon.;
	}

	location /cgi-bin {
		root www/cgi-bin/;
		cgi_ext .py;
	}

	location /site1 {
		root www/testhtml/site1;
	}

	location /site2 {
		root www/testhtml/site2;
	}

	location /site3 {
		root www/testhtml/site1;
	}
}

server {
	server_name test2;
	listen 127.0.0.1:8081;

	autoindex on;
	location / {
		root /www;
	}
	location = /truc {
		root /www ;
	}
}

