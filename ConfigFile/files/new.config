server {
	server_name test.com;
	listen 127.0.0.1:8080;

	allow_methods GET, POST;
	autoindex on;

	location / {
		root www/ ;
		rewrite /blabla exemple.txt rewrite;
		rewrite /blibli exemple.txt permanent;
		autoindex on;
		#index montec.html;
	}

	location /favicon. {
		root www/testhtml/favicon.;
	}

	location /www {
		root www/ ;
		autoindex off;
	}

	location /cgi-bin {
		root www/cgi-bin/;
		cgi_ext .py;
	}

	location /site1 {
		root www/testhtml/site1;
	}

	location /site2 {
		root www/testhtml/site2;
	}

	location /site3 {
		root www/testhtml/site1;
	}
}

server {
	server_name test2;
	listen 127.0.0.1:8081;

	root html/site2/;

	location = /bidule {
		root /www ;
	}
	location = /truc {
		root /www ;
	}
}
