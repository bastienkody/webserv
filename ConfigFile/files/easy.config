	server {
	server_name test;
	listen 10.1.1.1:8080;

	root html/site1/;

	location / {
		root www/;
		index index.html;
		autoindex off;
		allow_methods GET, POST, DELETE;
		cgi python3;
		cgi_ext .py;
	}

	location /cgi-bin/ {
		root www/cgi-bin/;
		allow_methods GET, POST, DELETE;
		cgi python3;
		cgi_ext .py;
	}

	location /www/ {
		root ./www/;
		autoindex on;
		allow_methods GET, POST, DELETE;
	}

	location = /truc/test.html {
		index html/primero_index.html;
		autoindex on;
		max_body_size   56   ;
		error_page 404 /404.html;
		error_page 405 /405.html;


		cgi bash;
		cgi_ext .sh;
	}
	location /secundo {
		index html/secundo_index.html;
		max_body_size 1234567;
		error_page 404 /404.html;
		allow_methods GET, POST;

		cgi_ext .py;

	}
	location /third {
		autoindex on;
		max_body_size 100000000;
		allow_methods GET;
		cgi /usr/bin/python3;
		cgi_ext .py, .php,  .zizi;
	}
}
	server {
	server_name test2;
	listen 10.1.1.1:8081;

	root html/site2/;
	}
